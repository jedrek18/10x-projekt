---
import type { LandingCopy } from "@/lib/i18n-landing";

interface Props {
  copy: Pick<LandingCopy, "ctaLogin" | "ctaSignup">;
}

const { copy } = Astro.props as Props;
---

<nav aria-label="Authentication" class="flex items-center justify-center gap-3">
  <a
    href="/auth/login"
    class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all focus-visible:border-ring focus-visible:ring-ring/50 outline-none focus-visible:ring-[3px] bg-primary text-primary-foreground shadow-xs hover:bg-primary/90 h-10 px-6"
  >
    <span data-lang="en">{copy.ctaLogin}</span>
    <span data-lang="pl">Zaloguj</span>
  </a>
  <a
    href="/auth/signup"
    class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all focus-visible:border-ring focus-visible:ring-ring/50 outline-none focus-visible:ring-[3px] border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground h-10 px-6"
  >
    <span data-lang="en">{copy.ctaSignup}</span>
    <span data-lang="pl">Zarejestruj</span>
  </a>
  
  <!-- Note: Using links instead of React Button to keep Landing minimal JS -->
</nav>


