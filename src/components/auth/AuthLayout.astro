---
export interface Props {
  title: string;
  subtitle?: string;
  messageFromRedirect?: string;
}

const { title, subtitle, messageFromRedirect } = Astro.props;
---

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">{title}</h1>
      {subtitle && <p class="text-sm text-gray-600 mb-4">{subtitle}</p>}
      {
        messageFromRedirect && (
          <div class="bg-blue-50 border border-blue-200 rounded-md p-3 mb-4">
            <p class="text-sm text-blue-800" aria-live="polite">
              {messageFromRedirect}
            </p>
          </div>
        )
      }
    </div>

    <div class="bg-white py-8 px-6 shadow-md rounded-lg">
      <slot />
    </div>

    <!-- Navigation links -->
    <div class="text-center">
      {
        title.includes("Zaloguj") ? (
          <p class="text-sm text-gray-600">
            Nie masz konta?{" "}
            <a
              href="/auth/signup"
              class="font-medium text-blue-600 hover:text-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
            >
              Załóż konto
            </a>
          </p>
        ) : (
          <p class="text-sm text-gray-600">
            Masz już konto?{" "}
            <a
              href="/auth/login"
              class="font-medium text-blue-600 hover:text-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
            >
              Zaloguj się
            </a>
          </p>
        )
      }
    </div>
  </div>
</div>
